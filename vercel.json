{
    "version": 2,
    "functions": {
      "src/controllers/**/*": {
        "runtime": "node@22.3.0",
        "maxDuration": 60
      }
    },
    "routes": [
      {
        "src": "/(.*)",
        "dest": "api/server.js",
        "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
        "headers": {
          "Access-Control-Allow-Origin": "*"
        }
      }
    ]
  }
  